@import './override.styl'
@import url(https://cdn.jsdelivr.net/gh/tonsky/FiraCode@1.206/distr/fira_code.css);
html,body
  font-family "Fira Code"

.content:not(.custom)
  overflow hidden
  ul li
    word-wrap break-word

.content:not(.custom)
  h1,h2,h3,h4,h5
    line-height normal
    word-break break-word

.home .hero img
  max-height 240px
  border-radius 50%
  overflow hidden

.home .hero h1
  display none
