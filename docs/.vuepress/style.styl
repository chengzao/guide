.content:not(.custom)
  overflow hidden
  ul li
    word-wrap break-word

.content:not(.custom)
  h1,h2,h3,h4,h5
    line-height normal
    word-break break-word

.home .hero img
  max-height 240px
  border-radius 50%
  overflow hidden

.home .hero h1
  display none

.content h1
  font-size 1.5rem
  color #2c3e50

.content h2
  font-size 1.2rem
  color #4e6e8e

.content h3
  font-size 1rem
  color #434343

details summary:focus
  outline none

details summary:hover
  cursor pointer
